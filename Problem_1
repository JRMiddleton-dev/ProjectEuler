#include "std_lib_facilities.h"

// If we list all the natural numbers below 10 that are multiples of 3 or 5, we get 3, 5, 6 and 9. The sum of these multiples is 23.
//Find the sum of all the multiples of 3 or 5 below 1000 (Completed: 13042021).


int main() {
    int i = 0;
    int s3 = 0; // s3-sum of multiples of 3
    int s5 = 0;// s5-sum of multiples of 5

    while(i<1000) {
        cout <<i<<'\t';
        s3=s3+i;
        cout <<s3<<'\n';
        i+=3;
    }

    i = 0; //reset i to 0

    while(i<1000) {
        cout <<i<<'\t';
        s5=s5+i;
        cout <<s5<<'\n';
        i+=5;
    }

    cout <<s3+s5<<'\n';

}
